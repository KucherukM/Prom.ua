{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=PromCloneDb.db;Cache=Shared"
  },
  "JwtSettings": {
    "SecretKey": "your-production-secret-key-here-make-it-very-long-and-secure",
    "Issuer": "PromClone",
    "Audience": "PromCloneUsers",
    "ExpirationInMinutes": 60
  },
  "AllowedHosts": "*",
  "CorsOrigins": [
    "https://yourdomain.com",
    "https://www.yourdomain.com"
  ]
} 